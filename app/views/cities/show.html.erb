<!-- La vue affiche le nom de la ville ainsi que tous les gossips des users qui habitent cette ville -->
<h1>City: <%= @city.name %></h1><br />
  <h5 class="card-title">All Gossip from <%= @city.name %>:</h5><br />

    <!-- Boucle qui parcours le tableau qui contient les numéros des users qui ont écrit un gossip dans la city -->

    <% @users_by_city_id.each do |user_number| %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Title :</h5> 
            <% gossip = @gossips.find_by(user_id: user_number)%>
            <%= @gossips.find_by(user_id: user_number).title%><br /><br />
            <h5 class="card-title">Content :</h5> 
            <%= @gossips.find_by(user_id: user_number).content%>
         
            <% if current_user %>
                <% if like = is_like?(gossip) %>
                    <a href="<%= user_gossip_like_path(user_id: current_user, gossip_id: gossip.id, id: like.id)  %>" role="button" data-method="delete"><i class="fas fa-heart"></i><span class="tooltiptext">Dislike</span></a>
                <% else %>
                    <a href="<%= user_gossip_likes_path(user_id: current_user, gossip_id: gossip.id) %>" role="button" data-method="create"><i class="btn btn-xs btn-default"></i><span class="glyphicon glyphicon-thumbs-up"></span> Like</a>
                <% end %>
            <% end %>
          
            <%= how_much_likes(gossip) %> 
       
          </div>
        </div>

      <% end %> 